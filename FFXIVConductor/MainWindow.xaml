<Window x:Class="FFXIVConductor.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:FFXIVConductor"
        mc:Ignorable="d"
        Title="FFXIVConductor" Height="268" Width="350">
    <StackPanel HorizontalAlignment="Center" Margin="10" Width="290" >
        <Button Name="pathButton" Click="pathButton_Click" Width="200">Set FFXIV Install File Path</Button>
        <TextBox Name="pathText" Margin="1" IsReadOnly="True"/>
        <Button Name="midiButton1" Uid="1" Margin="10" Width="150" IsEnabled="False" Click="midiButton_Click">Import Midi to Slot 1</Button>
        <Button Name="midiButton2" Uid="2" Margin="10" Width="150" IsEnabled="False" Click="midiButton_Click">Import Midi to Slot 2</Button>
        <Button Name="midiButton3" Uid="3" Margin="10" Width="150" IsEnabled="False" Click="midiButton_Click">Import Midi to Slot 3</Button>

        <Button Name="midiExportButton" Uid="3" Margin="18" Width="150" IsEnabled="False" Click="MidiExportButton_OnClick">Export all</Button>
    </StackPanel>
</Window>
